{
	"Logging": {
		"LogLevel": {
			"Default": "Debug",
			"Microsoft.AspNetCore": "Warning"
		}
	},
	"ServerLimits": {
		"MaxRequestBodySize": 60000000 /*默认30,000,000/28.7MB*/
	},
	"LogRequest": {
		"Methods": [ "GET", "POST", "PUT", "DELETE" ]
	},
	"AllowedHosts": "*",
	"Jwt": {
		"Issuer": "localhost",
		"Audience": "users",
		"SigningKey": "1234567890123456",
		"Expiration": 480, /* 超时时间（m） */
		"ClockSkew": 30, /* 允许服务器时间偏移量（s） */
		"EnableRedis": true,
		"RedisKey": "AhDai:Token"
	},
	"Database": [
		{
			"Name": "Default",
			"ConnectionString": "Data Source=10.10.10.1;User ID=sa;Password=mssql@123456;",
			"Type": 3
		}
	],
	"Redis": {
		"Host": "127.0.0.1",
		"Port": "6379",
		"Password": "123456",
		"Database": "2"
	},
	"Mail": {
		"Smtp": {
			"Host": "smtp.sina.com",
			"Port": 25,
			"Username": "test@sina.com",
			"Password": "123456"
		},
		"Expiry": "00:03:00"
	},
	"File": {
		"UploadDirectory": "uploads",
		"DownloadDirectory": "downloads",
		"MaxSize": "51200", /*KB*/
		"Extensions": {
			"Image": [ ".jpg", ".jpeg", ".png", ".heif" ],
			"Video": [ ".mp4", ".mkv", ".mov", ".avi" ],
			"File": [ ".doc", ".docx", ".xls", ".xlsx", ".ppt", ".pptx", ".txt" ]
		}
	}
}
