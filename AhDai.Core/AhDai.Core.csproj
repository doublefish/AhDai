<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFrameworks>net8.0;net10.0</TargetFrameworks>
		<Nullable>enable</Nullable>
		<ImplicitUsings>disable</ImplicitUsings>

		<Version>1.10.2</Version>
		<AssemblyVersion>1.10.2</AssemblyVersion>
		<FileVersion>1.10.2</FileVersion>
		<Authors>Shuang Yu</Authors>
		<Company>AhDai</Company>
		<Copyright>© Shuang Yu. All rights reserved.</Copyright>

		<Description>常用方法封装 - Core</Description>
		<PackageIcon></PackageIcon>
		<PackageTags>AhDai;Core</PackageTags>
		<!--<PackageReadmeFile>README.md</PackageReadmeFile>-->
		<PackageProjectUrl>https://github.com/doublefish/AhDai</PackageProjectUrl>
		<RepositoryUrl>https://github.com/doublefish/AhDai</RepositoryUrl>
		<RepositoryType>git</RepositoryType>
		<PackageLicenseExpression>MIT</PackageLicenseExpression>
		<PackageRequireLicenseAcceptance>True</PackageRequireLicenseAcceptance>
		<PackageReleaseNotes>Token加密方式升级为RSA</PackageReleaseNotes>

		<GeneratePackageOnBuild>True</GeneratePackageOnBuild>
		<GenerateDocumentationFile>true</GenerateDocumentationFile>
		<DocumentationFile>AhDai.Core.xml</DocumentationFile>
		<OpenApiGenerateDocuments>False</OpenApiGenerateDocuments>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="AhDai.Base" Version="1.0.8" />
		
		<PackageReference Include="StackExchange.Redis" Version="2.10.1" />
	</ItemGroup>

	<ItemGroup Condition="'$(TargetFramework)' == 'net8.0' ">
		<PackageReference Include="Microsoft.AspNetCore.Authentication.JwtBearer" Version="8.0.23" />
		<PackageReference Include="Microsoft.AspNetCore.OpenApi" Version="8.0.23" />
		<PackageReference Include="Microsoft.EntityFrameworkCore" Version="8.0.23" />
		<PackageReference Include="Microsoft.EntityFrameworkCore.Relational" Version="8.0.23" />
		<PackageReference Include="System.Drawing.Common" Version="8.0.23" />
	</ItemGroup>

	<ItemGroup Condition="'$(TargetFramework)' == 'net10.0' ">
		<PackageReference Include="Microsoft.AspNetCore.Authentication.JwtBearer" Version="10.0.2" />
		<PackageReference Include="Microsoft.AspNetCore.OpenApi" Version="10.0.2" />
		<PackageReference Include="Microsoft.EntityFrameworkCore" Version="10.0.2" />
		<PackageReference Include="Microsoft.EntityFrameworkCore.Relational" Version="10.0.2" />
		<PackageReference Include="System.Drawing.Common" Version="10.0.2" />
	</ItemGroup>

	<ItemGroup>
		<Folder Include="Providers\" />
	</ItemGroup>

</Project>
